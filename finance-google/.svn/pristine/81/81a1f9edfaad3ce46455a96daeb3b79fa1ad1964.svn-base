<select id="selectInforByRead" resultMap="PartInforMap" parameterType="Long">
 SELECT
	infor_title,
	send_time,
	id,
	(
		CASE
		WHEN (
			id IN (
				SELECT
					infor_id
				FROM
					message_relationship
				WHERE
					user_id = #{userId}
			)
		) THEN
			'0'
		ELSE
			'1'
end
	)as readStatus
FROM
	information_manage
	 where infor_status=1
	 order by readStatus desc ,send_time desc
	 limit 0,#{b}
</select>
